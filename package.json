{
  "name": "fastest-validator",
  "version": "1.16.0",
  "description": "The fastest JS validator library for NodeJS",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "bench": "node benchmark/index.js",
    "bench:watch": "nodemon benchmark/index.js",
    "dev": "nodemon examples/index.js",
    "ci": "jest --watch",
    "postdeps": "npm test",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "jest --coverage",
    "test:travis": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cylution-org/fastest-validator.git"
  },
  "keywords": [
    "validation",
    "validators",
    "validate",
    "schema"
  ],
  "files": [
    "dist",
    "lib",
    "index.js",
    "index.d.ts"
  ],
  "author": "Icebob",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/icebob/fastest-validator/issues"
  },
  "homepage": "https://github.com/icebob/fastest-validator#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/mongodb": "^4.0.7",
    "benchmarkify": "^3.0.0",
    "cli-highlight": "^2.1.11",
    "coveralls": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.0.1",
    "jest": "^27.2.5",
    "jest-cli": "^27.2.5",
    "mongodb": "^4.1.3",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./lib",
    "roots": [
      "../test"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "test/typescript/tsconfig.json",
        "diagnostics": true
      }
    }
  }
}
